<div class="container">
    <div class="row my-3">
        <div class="col-md-12">
            <div class="display-1">Burgers!</div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6 d-flex justify-content-center">
            <h1>Burgers:</h1><br>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 d-flex justify-content-center">
            <h1>Devoured Burgers:</h1><br>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row mb-3">
        <h2>Make a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="burger_name">
            </div>

            <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Edible
            </div>

            <button type="submit">Make Burger</button>
        </form>
    </div>
</div>